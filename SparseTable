struct Sparse{
   public:
    vector<vector<int>> table;
    int n;
    Sparse(int N){
      table.assign(N,vector<int>(22,0));
      n=N;
    }
    void build(vector<int> &v){
      for(int i=0;i<n;i++){
         table[i][0]=v[i];
      }
      for(int k=1;k<22;k++){
         for(int i=0;i+(1<<k)-1<n;i++){
            table[i][k]=(table[i][k-1]&table[i+(1<<k-1)][k-1]);
         }
      }
    }
    // 0 based indexing
    int query(int l,int r){
         int d=r-l+1;
         int bit=__lg(d);
         return (table[l][bit]&table[r-(1<<bit)+1][bit]);
    }
};
